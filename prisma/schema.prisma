generator client {
  provider = "prisma-client-js"
}
 
datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_PRISMA_URL") // uses a direct connection
}
 
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  age       Int
  role      Role     @default(USER)
}

enum Role {
  ADMIN
  USER
}